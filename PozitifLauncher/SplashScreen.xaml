<Window x:Class="PozitifLauncher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pozitif Launcher" Height="300" Width="500"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen" Topmost="True"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False">

    <Border CornerRadius="10" Background="White" BorderBrush="#007ACC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo Area -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GLOBAL POZITIF" FontSize="28" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center"/>
                <TextBlock Text="TEKNOLOJÄ°LER" FontSize="20" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading Animation -->
            <ProgressBar Grid.Row="1" IsIndeterminate="True" Height="4" Margin="50,20,50,10" Foreground="#007ACC" Background="#E0E0E0" BorderThickness="0"/>

            <!-- Status Text -->
            <TextBlock Grid.Row="2" Text="Loading..." HorizontalAlignment="Center" Margin="0,0,0,20" Foreground="#888"/>
        </Grid>
    </Border>
</Window>
