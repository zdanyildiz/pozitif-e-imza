<Window x:Class="PozitifLauncher.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pozitif Launcher" Height="450" Width="500"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        AllowsTransparency="True" Background="Transparent"
        ShowInTaskbar="False">

    <Border CornerRadius="10" Background="White" BorderBrush="#007ACC" BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="5" Opacity="0.5"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Logo / Brand Area -->
            <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="GLOBAL POZITIF" FontSize="28" FontWeight="Bold" Foreground="#007ACC" HorizontalAlignment="Center"/>
                <TextBlock Text="TEKNOLOJİLER" FontSize="20" FontWeight="SemiBold" Foreground="#555" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Loading Animation -->
            <ProgressBar x:Name="Progress" Grid.Row="1" IsIndeterminate="True" Height="4" Margin="50,20,50,10" Foreground="#007ACC" Background="#E0E0E0" BorderThickness="0"/>

            <!-- Status Text -->
            <TextBlock Grid.Row="2" x:Name="StatusText" Text="Başlatılıyor..." HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#888"/>
            
            <!-- Log Area -->
            <Border Grid.Row="3" Margin="20,0,20,10" BorderBrush="#EEE" BorderThickness="1" Background="#FAFAFA" CornerRadius="4">
                <TextBox x:Name="LogText" Text="Sistem hazırlanıyor..." 
                         FontFamily="Consolas, Courier New" FontSize="11" Foreground="#444" 
                         TextWrapping="Wrap" Padding="5"
                         IsReadOnly="True" VerticalScrollBarVisibility="Auto" BorderThickness="0" Background="Transparent"/>
            </Border>

            <!-- Action Buttons (Hidden by default) -->
            <StackPanel x:Name="ActionButtons" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,0,0,10">
                <Button Content="Logları Kopyala" Width="120" Height="30" Margin="0,0,10,0" 
                        Click="CopyBtn_Click" 
                        Background="#5BC0DE" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Kapat" Width="100" Height="30" 
                        Click="CloseBtn_Click" 
                        Background="#D9534F" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
